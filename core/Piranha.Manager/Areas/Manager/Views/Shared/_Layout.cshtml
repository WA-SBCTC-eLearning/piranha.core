@{
    var module = Piranha.App.Modules.Get<Piranha.Manager.Module>();
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="~/manager/assets/img/favicon.png" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <link rel="stylesheet" href="~/manager/assets/css/piranha.min.css">
    @foreach (var style in module.Styles)
    {
        <link href="@Url.Content(style)" rel="stylesheet" type="text/css" />
    }
    @RenderSection("head", required: false)
</head>

<body class="@ViewBag.BodyClass">
    <main class="container-fluid">
        <div class="main-nav">
            <nav>
                <partial name="Partial/_Menu" />
            </nav>
        </div>
        <div class="body">
            @RenderBody()
        </div>
    </main>
    <script>
        if (typeof(piranha)  == 'undefined')
        {
            piranha = {};
        }
        piranha.baseUrl = '@Url.Content("~/")';
        piranha.prevFocus = null;
    </script>

    <partial name="Partial/_MediaModal" />
    <partial name="Partial/_PreviewModal" />
    <partial name="Partial/_PageModal" />
    <partial name="Partial/_PostModal" />
    <partial name="Partial/_BlockModal" />

    <script src="https://cdn.jsdelivr.net/npm/vue"></script>
    <script src="~/manager/assets/js/script.min.js"></script>
    <script src="~/manager/assets/tinymce/tinymce.min.js"></script>

    @foreach (var partial in module.Partials)
    {
        <partial name="@partial" />
    }
    <partial name="Partial/_EditorSetup" />

    @RenderSection("script", required: false)
</body>
</html>
